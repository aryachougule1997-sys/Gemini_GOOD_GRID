{
  "name": "good-grid-platform",
  "version": "1.0.0",
  "description": "AI-powered, location-based community contribution platform with gamification",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared/types"
  ],
  "scripts": {
    "install:all": "npm install && npm run install:frontend && npm run install:backend && npm run install:shared",
    "install:frontend": "cd frontend && npm install",
    "install:backend": "cd backend && npm install",
    "install:shared": "cd shared/types && npm install",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:frontend": "cd frontend && npm start",
    "dev:backend": "cd backend && npm run dev",
    "build": "npm run build:shared && npm run build:backend && npm run build:frontend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:shared": "cd shared/types && npm run build",
    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "cd frontend && npm test -- --watchAll=false",
    "test:backend": "cd backend && npm test",
    "test:dungeon-performance": "cd frontend && npx ts-node src/scripts/testDungeonPerformance.ts",
    "setup:db": "psql -U postgres -c 'CREATE DATABASE good_grid;' && psql -U postgres -d good_grid -f backend/src/database/schema.sql"
  },
  "devDependencies": {
    "concurrently": "^8.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/good-grid-platform.git"
  },
  "keywords": [
    "gamification",
    "community",
    "volunteering",
    "ai",
    "typescript",
    "react",
    "nodejs",
    "postgresql"
  ],
  "author": "Good Grid Team",
  "license": "MIT"
}